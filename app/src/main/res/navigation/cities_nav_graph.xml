<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cities_nav_graph"
    app:startDestination="@id/citiesListFragment">

    <fragment
        android:id="@+id/citiesListFragment"
        android:name="com.upb.aroundme.ui.fragments.CitiesListFragment"
        tools:layout="@layout/fragment_cities_list"
        android:label="CitiesListFragment" >
        <action
            android:id="@+id/action_citiesListFragment_to_generalCityActivity"
            app:destination="@id/generalCityActivity" />
    </fragment>

    <activity
        android:id="@+id/generalCityActivity"
        android:name="com.upb.aroundme.ui.activities.GeneralCityActivity"
        android:label="activity_lp_places"
        tools:layout="@layout/activity_general_cities_places" >
        <argument
            android:name="cityInfo"
            app:argType="com.upb.aroundme.model.City" />
    </activity>
</navigation>