<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upb.aroundme">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AroundMe"
        android:name=".App">
        <activity
            android:name=".ui.placeInformationPage.LocationInfoActivity"
            android:exported="true"
            android:parentActivityName=".ui.placesToVisitPage.activity.PlacesActivity"/>
        <activity
            android:name="com.upb.aroundme.ui.placesToVisitPage.activity.PlacesActivity"
            android:exported="true"
            android:parentActivityName=".ui.departmentPage.activity.CitiesActivity"/>
        <activity
            android:name=".ui.departmentPage.activity.CitiesActivity"
            android:exported="true"
            android:parentActivityName=".ui.login.activity.LoginActivity"/>
        <activity
            android:name=".ui.login.activity.LoginActivity"
            android:exported="true"
            android:parentActivityName=".ui.splash.MainActivity"/>
        <activity
            android:name="com.upb.aroundme.ui.splash.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>